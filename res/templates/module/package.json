{
  "name": "$[nameAsDashCase]",
  "version": "0.0.1",
  "description": "$[description]",
  "main": "app/dist/$[name].js",
  "types": "app/dist/$[name].d.ts",
  "scripts": {
    "build": "tsc -p ./tsconfig.prod.json",
    "dev": "npm run $[defaultDevScript]",
    "devWeb": "rollup --config rollup.web.dev.config.js -w",
    "devServer": "rollup --config rollup.server.dev.config.js -w",
    "deploy": "npm run build && npm publish",
    "test": "node ./test/dist/test-bundle"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/$[githubUsername]/$[name].git"
  },
  "keywords": $[keywordsAsJSON],
  "author": "$[author]",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/$[githubUsername]/$[name]/issues"
  },
  "homepage": "https://github.com/${githubUsername}/$[name]#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^8.1.0",
    "@rollup/plugin-typescript": "^5.0.0",
    "@types/node": "^13.13.4",
    "rollup": "^2.18.1",
    "typescript": "^3.9.5",
    "webpack-merge": "^5.0.9"
  }
}
